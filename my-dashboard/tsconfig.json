{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "unplugin-icons/types/vue",
      "vite/client"
    ],
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/App.vue",
    "src/components/Seller/**/*.vue",
    "src/components/Customer/**/*.vue",
    "src/pages/Seller/**/*.vue",
    "src/pages/Customer/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
    "build"
  ]
}