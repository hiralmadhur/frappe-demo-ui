  "html": "<style>\r\n    .invoice-box {\r\n        font-family: Arial, sans-serif;\r\n        font-size: 12px;\r\n        color: #333;\r\n    }\r\n    .header-title {\r\n        font-size: 22px;\r\n        font-weight: bold;\r\n    }\r\n    .section-title {\r\n        font-weight: bold;\r\n        margin-top: 20px;\r\n        border-bottom: 1px solid #000;\r\n    }\r\n    .qr-box {\r\n        text-align: center;\r\n        margin-top: 20px;\r\n        border: 1px solid #000;\r\n        padding: 10px;\r\n        width: 250px;\r\n    }\r\n    table {\r\n        width: 100%;\r\n        border-collapse: collapse;\r\n    }\r\n    table, th, td {\r\n        border: 1px solid #ddd;\r\n    }\r\n    th, td {\r\n        padding: 6px;\r\n        text-align: left;\r\n    }\r\n</style>\r\n\r\n<div class=\"invoice-box\">\r\n\r\n    <!-- Company Header -->\r\n    <div style=\"text-align:center;\">\r\n        <div class=\"header-title\">{{ doc.company }}</div>\r\n        <div>Sales Invoice</div>\r\n    </div>\r\n\r\n    <br>\r\n\r\n    <!-- Invoice Info -->\r\n    <table>\r\n        <tr>\r\n            <td><b>Invoice No:</b> {{ doc.name }}</td>\r\n            <td><b>Date:</b> {{ doc.posting_date }}</td>\r\n        </tr>\r\n        <tr>\r\n            <td><b>Customer:</b> {{ doc.customer }}</td>\r\n            <td><b>Status:</b> {{ doc.status }}</td>\r\n        </tr>\r\n    </table>\r\n\r\n    <!-- Items Table -->\r\n    <div class=\"section-title\">Items</div>\r\n    <table>\r\n        <thead>\r\n            <tr>\r\n                <th>Item</th>\r\n                <th>Qty</th>\r\n                <th>Rate</th>\r\n                <th>Amount</th>\r\n            </tr>\r\n        </thead>\r\n        <tbody>\r\n            {% for item in doc.items %}\r\n            <tr>\r\n                <td>{{ item.item_name }}</td>\r\n                <td>{{ item.qty }}</td>\r\n                <td>{{ item.rate }}</td>\r\n                <td>{{ item.amount }}</td>\r\n            </tr>\r\n            {% endfor %}\r\n        </tbody>\r\n    </table>\r\n\r\n    <!-- Totals -->\r\n    <div class=\"section-title\">Total</div>\r\n    <table>\r\n        <tr>\r\n            <td><b>Grand Total</b></td>\r\n            <td style=\"text-align:right;\"><b>₹ {{ doc.grand_total }}</b></td>\r\n        </tr>\r\n    </table>\r\n\r\n    <!-- Remarks -->\r\n    {% if doc.remarks %}\r\n    <div class=\"section-title\">Remarks</div>\r\n    <p>{{ doc.remarks }}</p>\r\n    {% endif %}\r\n\r\n    <!-- QR Code Section -->\r\n    {% set upi_id = \"harshkumarprajapati73@oksbi\" %}\r\n    {% set company_name = doc.company %}\r\n    {% set amount = doc.grand_total %}\r\n    {% set note = doc.name %}\r\n\r\n    {% set upi_string = \r\n        \"upi://pay?pa=\" + upi_id + \r\n        \"&pn=\" + company_name + \r\n        \"&am=\" + amount|string + \r\n        \"&tn=\" + note \r\n    %}\r\n\r\n    <div class=\"qr-box\">\r\n        <!--<h4>Scan & Pay</h4>-->\r\n        <img src=\"https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ upi_string | urlencode }}\">\r\n        <!--<p><b>Amount:</b> ₹ {{ amount }}</p>-->\r\n        <!--<p><b>Invoice:</b> {{ note }}</p>-->\r\n    </div>\r\n\r\n</div>\r\n",
